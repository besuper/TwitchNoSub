{
    "name": "TwitchNoSub",
    "version": "0.8.1",
    "description": "Show sub only VOD on Twitch",
    "manifest_version": 2,
    "icons": {
        "128": "assets/icons/icon.png"
    },
    "web_accessible_resources": [
        "src/app.js"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "js": [
                "src/twitchnosub.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "https://*.twitch.tv/*",
        "https://static.twitchcdn.net/assets/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "twitchnosub@besuper.com",
            "strict_min_version": "58.0"
        }
    }
}